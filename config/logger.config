[loggers]
keys=root,main,CKAN,CKANData,CKANTransform,CKANUpdate,DataCache,CustomTransformers

[handlers]
keys=consoleHandler, logFileHandler

[formatters]
keys=consoleFormatter

#----- LOGGERS

[logger_root]
level=INFO
handlers=consoleHandler

[logger_main]
level=DEBUG
handlers=consoleHandler
qualname=main
propagate=0

[logger_CKAN]
level=DEBUG
handlers=consoleHandler
qualname=CKAN
propagate=0

[logger_CKANData]
level=DEBUG
handlers=consoleHandler
qualname=CKANData
propagate=0

[logger_CKANTransform]
level=INFO
handlers=consoleHandler
qualname=CKANTransform
propagate=0

[logger_CKANUpdate]
level=DEBUG
handlers=consoleHandler
qualname=CKANUpdate
propagate=0

[logger_DataCache]
level=DEBUG
handlers=consoleHandler
qualname=DataCache
propagate=0

[logger_CustomTransformers]
level=DEBUG
handlers=consoleHandler
qualname=CustomTransformers
propagate=0


#----- HANDLERS

[handler_consoleHandler]
class=StreamHandler
formatter=consoleFormatter
args=(sys.stdout,)

[handler_logFileHandler]
class=FileHandler
formatter=consoleFormatter
args=('%(logfilename)s',)


#----- FORMATTERS

[formatter_consoleFormatter]
format=%(asctime)s - %(lineno)s - %(name)s - %(levelname)s - %(message)s
datefmt=%Y-%m-%d %H:%M:%S
class=logging.Formatter